<h1><%= t('activerecord.attributes.index')%></h1>

<div id="movies" class="row row-cols-1 row-cols-md-3 g-4">
  <% @movies.each do |movie| %>
    <div class="col">
      <div class="card h-100">
        <%= render movie %>
        <div class="card-body">
          <p>
            <%= link_to t('activerecord.attributes.movie.buttons.show'), movie, class: 'btn btn-primary' %>
